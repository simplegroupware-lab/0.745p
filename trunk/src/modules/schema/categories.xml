<table modulename="{t}Categories{/t}" default_view="display" orderby="categoryname" order="asc" limit="20" enable_new="true" enable_edit="true" enable_delete="true" enable_empty="true" disable_quick_add="true">
  <view name="display" displayname="{t}Display{/t}">
  </view>
  
